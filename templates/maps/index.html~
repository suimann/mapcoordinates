        <script type="text/javascript">
            $(document).ready(function() {
                $('img').click(function(e) {
                    var offset = $(this).offset();
                    var coordinates = "X=" + (e.clientX - offset.left) + "," + " Y=" + (e.clientY - offset.left)
                    $('.coord').text(coordinates);
                });
            });
        </script>
